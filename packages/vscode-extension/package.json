{
  "name": "amazon-q-cli-integration",
  "displayName": "Amazon Q CLI Integration",
  "description": "Send active file context to Amazon Q CLI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "amazonq.openCLI",
        "title": "Open Amazon Q CLI",
        "icon": "$(terminal)"
      },
      {
        "command": "amazonq.sendActiveFile",
        "title": "Send Active File to Amazon Q CLI"
      },
      {
        "command": "amazonq.sendSelectedCode",
        "title": "Send Selected Code to Amazon Q CLI"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "amazonq.openCLI",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "amazonq.sendSelectedCode",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
