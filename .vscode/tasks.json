{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-cli",
            "type": "shell",
            "command": "cargo",
            "args": ["build", "--release", "--bin", "chat_cli"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$rustc"
        },
        {
            "label": "compile-extension",
            "type": "shell",
            "command": "npm",
            "args": ["run", "compile"],
            "options": {
                "cwd": "${workspaceFolder}/packages/vscode-extension"
            },
            "group": "build",
            "dependsOn": "build-cli"
        }
    ]
}
